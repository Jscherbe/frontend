<!doctype html>
<html lang="en">
	{% include "partials/head.njk" %}
	<body class="page">
		{% include "partials/header.njk" %}
		{% if toc !== false %}
			<div class="page__toc page-toc">
				{{ content | toc | safe }}
			</div>
		{% endif %}
		<main id="main" class="page__body">
			{% block main %}
				{{ content | safe }}
			{% endblock %}
		</main>
		{% include "partials/footer.njk" %}
		{% include "partials/scripts.njk" %}
		{% block scripts %}{% endblock %}
	</body>
</html>
