{% set hasProxy = action == "proxy" %}
{% set isLink = action == "link" %}
{% set hasImage = media == "image" or media == "imageFit" %}
{% set element = isLink ? "a" : "article" %}
{% set isFooterInline = footerLayout == "footerInline" %}

{% set layoutClass = "" %}
{% if layout == "horizontalCenter" %}
  {% set layoutClass = "card--horizontal card--horizontal-center" %}
{% elseif layout == "horizontalPersist" %}
  {% set layoutClass = "card--horizontal-persist" %}
{% elseif layout == "horizontalPersistCenter" %}
  {% set layoutClass = "card--horizontal-persist card--horizontal-center" %}
{% elseif layout %}
  {% set layoutClass = "card--" ~ layout %}
{% endif %}

{% set classes = [
  "card",
  layoutClass,
  footerAlign ? ("card--footer-" ~ footerAlign) : "",
  isFooterInline ? "card--footer-inline" : "",
  media == "imageFit" ? "card--image-fit" : ""
] %}

<{{ element }} 
  class="{{ classes|join(' ') }}"
  {{ hasProxy ? "data-ulu-proxy-click" }}
  {{ isLink ? "href='https://www.google.com'" }}
>
  {% if body %}
    <div class="card__body">
      <div class="card__main crop-margins">
        {% if title %}
          <h5 class="card__title">
            {# If link don't nest link (no link title) #}
            {% if isLink %}
              Card Title
            {% else %}
              <a 
                class="card__title-link" 
                href="https://www.google.com" 
                {{ hasProxy ? "data-ulu-proxy-click-source" }}
              >
                Card Title
              </a>
            {% endif %}
          </h5>
        {% endif %}
        {% if content %}
          <p>
            This is the cards main content area. 
          </p>
        {% endif %}
      </div>
      {% if aside %}
        <div class="card__aside">
          This is the aside. attach the rule to this element.
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if hasImage %}
    <div class="card__image">
      <img src="/frontend/assets/placeholder/image-1.jpg">
    </div>
  {% endif %}

  {% if media == "icon" %}
    <div class="card__image card__image--icon">
      <img src="/frontend/assets/placeholder/icon-calendar.svg" width="150" height="150">
    </div>
  {% endif %}

  {% if footer %}
    <div class="card__footer">
      {# If link don't nest link (no link title) #}
      {% if isLink %}
        Card Footer Text
      {% elseif isFooterInline %}
        <button class="button button--small button--icon" aria-label="favorite">
          <span class="fas fa-star" aria-hidden="true">
        </button>
      {% else %}
        <a class="button button--small" href="https://www.yahoo.com/">Footer</a>
      {% endif %}
    </div>
  {% endif %}
</{{ element }}>

